{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "--no-incremental",
                "/p:GenerateFullPaths=true",
                "${workspaceFolder}"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/test/Kmd.Logic.Consumption.Tests"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}